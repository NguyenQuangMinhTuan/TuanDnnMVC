<script>
    $(document).ready(function () {
        // Khởi tạo Select2 cho Select Dropdown
        $('#MaKhoaAdd').select2({
            width: $(this).data('width') ? $(this).data('width') : $(this).hasClass('w-100') ? '100%' : 'style',
            language: "vi",
            placeholder: "Chọn Khoa",
        });

        // Lấy danh sách Khoa từ API và điền vào Select Dropdown
        $.ajax({
            url: `${BASEURL}/api/TuanMVC/SinhVien_KhoaApi/Gets`,
            type: "POST",
            data: buildData(),
            success: function (data) {
                const MaKhoa = $('#MaKhoaAdd');
                MaKhoa.empty(); // Xóa tất cả các option hiện có
                if (data && data.length > 0) {

                    const DefaultOpt = $('<option>', {
                        value: ""
                    });
                    MaKhoa.append(DefaultOpt);

                    for (let i = 0; i < data.length; i++) {
                        // Tạo một option mới cho mỗi author
                        const option = $('<option>', {
                            value: data[i].MaKhoa, // Giả sử ID là giá trị cần thiết
                            text: data[i].TenKhoa // Tên author là nội dung của option
                        });
                        MaKhoa.append(option); // Thêm option vào select dropdown
                    }
                }
            },
            error: function (error) {
                console.error("Lỗi khi lấy dữ liệu khoa:", error);
            }
        });
    });

    // Hàm buildData
    function buildData() {
        let tuKhoa = $('#tu-khoa-search').val();
        const request = {
            "TuKhoa": tuKhoa,
        };
        return request;
    }
</script>

